{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "../js",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,  
    "moduleResolution": "node"  
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "../../src/**/*",
    "../../node_modules"
  ]
}